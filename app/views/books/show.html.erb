<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/show', user: @book.user %>
      <%= render 'user_info', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                <% end %><br>
                <%= link_to @book.user.name,user_path(@book.user.id) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>

            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-success btn-sm'%></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？",class: 'btn btn-danger btn-sm'%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

