<div>
  <%= flash[:notice] %>
</div>

<div class="row justify-content-center">
  <div class="sidebar col-3">
    <%= render 'users/show', user: @user %>
    <%= render 'books/user_info', book: @book %>
  </div>
  <div class="col-8">
    <div class="row row-cols">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>

        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>



